{
    "template-of-operation": {
        "name":"template | order card entries by faction, then name",
        "faction": "N",
        "cardType": "O",
        "cost": 0,
        "targets": [
            {
                "name": "$var",
                "type": "tile",
                "properties": {
                    "unoccupied": true,
                    "next-to-building": true,
                    "with-health-at-least": 5,
                    "circle": 3
                }
            },
            {
                "name": "$annoyance",
                "type": "choice",
                "properties": {
                    "choices": ["choice1", "choice2", "choice3"]
                }
            }
        ],
        "effects": [{
            "effect": "spawn",
            "type": "U",
            "id": "footsoldier",
            "loc": "$var"
        }]
    },

    "power plant": {
        "name": "Power Plant",
        "faction": "N",
        "cardType": "B",
        "cost": 2,
        "targets": [{"name": "$loc", "type": "tile", "properties": {"buildable": true}}],
        "effects": [{
            "effect": "spawn",
            "type": "B",
            "id": "power plant",
            "loc": "$loc"
        }],
        "description": "A basic energy generator."
    },

    "bank": {
        "name": "Bank",
        "faction": "N",
        "cardType": "B",
        "cost": 2,
        "targets": [{"name": "$loc", "type": "tile", "properties": {"buildable": true}}],
        "effects": [{
            "effect": "spawn",
            "type": "B",
            "id": "bank",
            "loc": "$loc"
        }],
        "description": "A basic money generator."
    },

    "sentry turret": {
        "cost": 5,
        "cardType": "B",
        "description": "A sturdy Metropolis turret."
    },

    "popup turret": {
        "cost": 3,
        "cardType": "B",
        "description": "A small, cheap, instant-build building. Not sure if price should be 3 or 4."
    },

    "footsoldier": {
        "name": "Footsoldier",
        "faction": "N",
        "cardType": "U",
        "cost": 1,
        "targets": [{"name": "$loc", "type": "tile", "properties": {"spawnable": true}}],
        "effects": [{
            "effect": "spawn",
            "type": "U",
            "id": "footsoldier",
            "loc": "$loc"
        }],
        "description": "A basic unit."
    },

    "prototype": {
        "cost": 3,
        "cardType": "U",
        "effects": [
            {"effect": "spawn", "type": "U", "id": "prototype", "loc": "$loc"}, 
            {"effect": "modify-modifier", "type": "change", "modification": {"spawn": {"attack": 1}}},
            {"effect": "modify-modifier", "type": "change", "modification": {"spawn": {"heatlh": 1}}}
        ],
        "description": "Starts out weak, but gets stronger every time you play it."
    },

    "war funds": {
        "name": "War Funds",
        "faction": "N",
        "cardType": "O",
        "cost": 0,
        "targets": [],
        "effects": [{
            "effect": "gain",
            "type": "money",
            "quantity": 3,
            "target": "#selfPlayer"
        }],
        "description": "A money gain operation. Probably not balanced as is, and might not make it to the final version of the game."
    }

}