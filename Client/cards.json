{
    "template-of-operation": {
        "name":"template | order card entries by faction, then name",
        "faction": "N",
        "cardType": "U or B or O",
        "cost": 0,
        "targets": [
            {"name": "$var", "type": "tile", "properties": {
                    "unoccupied": true,
                    "next-to-building": true,
                    "with-health-at-least": 5,
                    "circle": 3
                }
            },
            {"name": "$annoyance", "type": "choice", "properties": {
                "choices": ["choice1", "choice2", "choice3"]
            }
            }
        ],
        "effects": [{
            "effect": "spawn",
            "type": "unit",
            "id": "footsoldier",
            "loc": "$var"
        }]
    },

    "power plant": {
        "name": "Power Plant",
